%h1 Listing stadium

%table
  %thead
    %tr
      %th Name
      %th Foundation date
      %th Stadium capacity
      %th Club
      %th
      %th
      %th

  %tbody
    - @stadium.each do |stadium|
      %tr
        %td= stadium.name
        %td= stadium.foundation_date
        %td= stadium.stadium_capacity
        %td= stadium.club
        %td= link_to 'Show', stadium
        %td= link_to 'Edit', edit_stadium_path(stadium)
        %td= link_to 'Destroy', stadium, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

