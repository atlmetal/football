%h1 Listing clubs

%table
  %thead
    %tr
      %th Name
      %th Foundation date
      %th Tittles
      %th League
      %th
      %th
      %th

  %tbody
    - @clubs.each do |club|
      %tr
        %td= club.name
        %td= club.foundation_date
        %td= club.tittles
        %td= club.league
        %td= link_to 'Show', club
        %td= link_to 'Edit', edit_club_path(club)
        %td= link_to 'Destroy', club, :method => :delete, :data => { :confirm => 'Are you sure?' }

